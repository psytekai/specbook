{
  "name": "specbook-manager",
  "version": "1.0.0",
  "main": "dist/main/index.js",
  "scripts": {
    "bundle-python": "bash scripts/bundle-python.sh",
    "bundle-python:windows": "echo 'Windows Python builds handled by CI/CD. Download from GitHub Actions artifacts.'",
    "dev": "npm run build:main && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --port 5173",
    "dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run bundle-python && npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "rebuild": "electron-builder install-app-deps",
    "postinstall": "npm run rebuild",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:main": "jest src/main"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Architectural Product Management Desktop App",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.1.0",
    "puppeteer": "^24.16.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.30.1",
    "sharp": "^0.33.5",
    "uuid": "^12.0.0"
  },
  "build": {
    "extraResources": [
      {
        "from": "resources/python/electron_bridge",
        "to": "python/electron_bridge",
        "filter": ["**/*"]
      }
    ]
  }
}
